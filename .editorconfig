; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[**.js]
indent_size = 2

[**.scss]
indent_size = 2

[**.less]
indent_size = 2

[**.json]
indent_size = 2

[**.vue]
indent_size = 2

[**.html]
indent_size = 2
